@model F1005.Models.ChangePasswordViewModel

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<h2>修改密碼</h2>

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @*@Html.AntiForgeryToken()*@

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            @Html.LabelFor(m => m.OPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.OPassword, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @id = "MyP", @class = "form-control" })
                <span class="text-danger" id="C1"></span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "MyCP", @class = "form-control" })
                <span class="text-danger" id="CC"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="fs" type="submit" value="確認修改" class="btn btn-default" />
            </div>
        </div>
    </div>
}

    <div>
        @Html.ActionLink("Back to MainPage", "Index", "Home", new { Area = "Main" }, null)
    </div>

@section Scripts {
    <script>
        function zzz() {

            if ($("#MyP").val() != $("#MyCP").val()) {
                $("#CC").text("密碼不一致");
                $("#fs").attr("disabled", true);
            }
            else {
                $("#CC").text(null);    
                if ($("#C1").text() == "") {
                    $("#fs").attr("disabled", false);
                }
            }
        }

        function eightup() {

            if ($("#MyP").val().length < 8) {
                $("#C1").text("密碼需大於八碼");
                $("#fs").attr("disabled", true);
            }
            else {
                $("#C1").text(null);   
                if ($("#CC").text() == "") {
                    $("#fs").attr("disabled", false);
                }
            }
        }

        $(function () {
            $("#MyP").blur(eightup);

            $("#MyP").keyup(zzz);
            $("#MyCP").keyup(zzz);
        });
               
    </script>    
    }
