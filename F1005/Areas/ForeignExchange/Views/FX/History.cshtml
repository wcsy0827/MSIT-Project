
@{
    ViewBag.Title = "Now";
}

<h2>目前匯率</h2> 
<div class="btn btn-group">
    @Html.ActionLink("匯率轉換", "ExchangeRates", "FX")
</div>
<div style="background-color:gainsboro;">
    <table id="myTable" class="table table-striped table-bordered" style="width:100%"></table>
</div>

@section styles
{
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section scripts
{
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        function LoadData() {
            var datatable = $('#myTable').DataTable({
                ajax: "http://localhost:55037/api/FX/Getlist",
                columns: [
                    { title: '幣別', data: "CurrencyClass" },
                    { title: '即期買入', data: "OnlineBuy" },
                    { title: '即期賣出', data: "OnlineSell" },
                ]
            });
        }
        $(function () {
            LoadData();
        });
    </script>
}